############################################
# Ferreteria API - Configuración de Ejemplo
############################################

# Base de Datos
# Formato: mysql://usuario:contraseña@host:puerto/nombre_base_datos
DATABASE_URL="mysql://root:password123@localhost:3306/ferreteria_local"

# Seguridad
# Generar una cadena larga y aleatoria para producción (ej. usando openssl rand -hex 32)
JWT_SECRET="cambiar_esto_por_una_cadena_secreta_larga_y_aleatoria"

# Configuración del Servidor
NODE_ENV=development
PORT=3001

# Configuración de Tenant
TENANT_ACTIVATION_MODE=manual

# CORS
# Permitir localhost frontend y backend por defecto
CORS_ORIGINS=http://localhost:5173,http://*.localhost:5173,http://localhost:3001,http://*.localhost:3001

# Configuración Adicional
TRUST_PROXY=false
EMAIL_ENABLED=false

# --- Cloudinary ---
# Obtener estas credenciales en el Dashboard de Cloudinary
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Opcional: URL de conexión completa
CLOUDINARY_URL=cloudinary://tu_api_key:tu_api_secret@tu_cloud_name